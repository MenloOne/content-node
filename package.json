{
  "name": "Menlo One: Content Node",
  "version": "1.0.0",
  "description": "Menlo One Content Node",
  "author": "daviddfm",
  "license": "MIT",
  "scripts": {
    "heroku-postbuild": "unset GIT_DIR && npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf src/contracts",
    "build": "npm run clean && ./scripts/compile_flat.sh",
    "prestart:prod": "rimraf dist && tsc",
    "start": "ENV=production PORT=5005 ts-node -r tsconfig-paths/register src/main.ts",
    "dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "dev:debug": "nodemon --config nodemon-debug.json",
    "start:hmr": "node dist/server",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "geth": "geth --rinkeby --syncmode fast --rpc --rpcapi db,eth,net,web3,personal --ws --wsorigins '*' --cache=1024 --rpcport 8545 --rpcaddr 127.0.0.1 --rpccorsdomain '*'",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.1.0",
    "@nestjs/core": "^5.1.0",
    "@nestjs/graphql": "^5.4.0",
    "@nestjs/mongoose": "^5.2.2",
    "@nestjs/websockets": "^5.4.0",
    "@types/web3": "^1.0.12",
    "apollo-server-express": "^2.1.0",
    "babel-polyfill": "^6.26.0",
    "cids": "^0.5.5",
    "graphql": "^14.0.2",
    "graphql-tools": "^4.0.1",
    "ipfs-api": "^23.0.0",
    "menlo-token": "^1.0.0",
    "mongoose": "^5.3.3",
    "multihashes": "^0.4.14",
    "node-machine-id": "^1.1.10",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.2",
    "soltsice": "^0.8.11",
    "tslint-config-airbnb": "^5.11.0",
    "typescript": "^3.0.1",
    "web3": "1.0.0-beta.35",
    "web3-provider-engine": "^14.0.6",
    "ws": "^6.1.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/express": "^4.16.0",
    "@types/ipfs": "github:vishalkuo/types-ipfs",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "supertest": "^3.1.0",
    "truffle": "^4.1.14",
    "truffle-hdwallet-provider-privkey": "^0.3.0",
    "truffle-typings": "^1.0.3",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "typechain": "^0.3.8",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
